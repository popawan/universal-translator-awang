{
  "name": "universal-translator",
  "version": "1.0.0",
  "description": "Universal Translator（tw, en, jp, kr）",
  "main": "main.js",
  "author": "a'wang@thinking",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
	"scripts": {
      "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.universal.translator",
    "productName": "Universal Translator",
    "win": {
      "icon": "icon.png",
      "target": [
        "nsis"
      ]
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3"
	"main": "main.js",
"build": {
  "appId": "com.popawan.translator",
  "productName": "Universal Translator",
  "copyright": "Copyright © 2025 popawan",
  "directories": {
    "output": "dist"
  },
  "win": {
    "target": "nsis",
    "icon": "icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}

  }
}
